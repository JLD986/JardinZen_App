<?xml version="1.0" encoding="utf-8"?>
<!--
Diseño del fragmento que muestra la información detallada de una planta.
Aquí se visualizan datos como temperatura, humedad, luz, agua, además de opciones
para controlar el riego automático y mostrar consejos de cuidado.
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige_claro"
    tools:context="com.example.jardnzen_app.Fragmentos.FragmentPlanta">

    <!-- Contenedor principal con disposición vertical -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Imagen de la planta -->
        <ImageView
            android:id="@+id/imagen_planta"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:src="@drawable/hortensia"
            android:layout_marginTop="20dp"/>

        <!-- TextView que muestra el nombre de la planta -->
        <TextView
            android:id="@+id/nombre_planta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hortensia"
            android:fontFamily="@font/comfortaa"
            android:textColor="@color/verde_fuente"
            android:textSize="34sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <!-- TextView que indica el estado general de la planta -->
        <TextView
            android:id="@+id/estado_planta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/estado"
            android:fontFamily="@font/comfortaa"
            android:textColor="@color/verde_fuente3"
            android:textStyle="bold"
            android:textSize="18sp" />

        <!-- Cuadrícula con las tarjetas de información ambiental -->
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:columnCount="2"
            android:rowCount="2"
            android:useDefaultMargins="true">

            <!-- Tarjeta de Temperatura -->
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:background="@drawable/card_border"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <!-- Ícono de temperatura -->
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_termometro"
                    android:layout_marginBottom="8dp"/>

                <!-- Título: "Temperatura" -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/temperatura"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/verde_oscuro"
                    android:fontFamily="@font/comfortaa"/>

                <!-- Valor actual de la temperatura -->
                <TextView
                    android:id="@+id/valor_temperatura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22 °C"
                    android:textColor="@color/verde_fuente2"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/comfortaa"/>
            </LinearLayout>

            <!-- Tarjeta de Humedad del suelo -->
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:background="@drawable/card_border"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <!-- Ícono de humedad -->
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_humedad"
                    android:layout_marginBottom="8dp"/>

                <!-- Título: "Humedad del suelo" -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/humedad_suelo"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/verde_oscuro"
                    android:fontFamily="@font/comfortaa"/>

                <!-- Valor actual de la humedad del suelo -->
                <TextView
                    android:id="@+id/valor_humedad_suelo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45%"
                    android:textColor="@color/verde_fuente2"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/comfortaa"/>
            </LinearLayout>

            <!-- Tarjeta de Nivel de luz -->
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:background="@drawable/card_border"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <!-- Ícono de luz solar -->
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_sol"
                    android:layout_marginBottom="8dp"/>

                <!-- Título: "Nivel de luz" -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nivel_luz"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/verde_oscuro"
                    android:fontFamily="@font/comfortaa"/>

                <!-- Valor actual del nivel de luz -->
                <TextView
                    android:id="@+id/valor_luz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300 lux"
                    android:textColor="@color/verde_fuente2"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/comfortaa"/>
            </LinearLayout>

            <!-- Tarjeta de Nivel de agua -->
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:background="@drawable/card_border"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <!-- Ícono de gota de agua -->
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_gota_agua"
                    android:layout_marginBottom="8dp"/>

                <!-- Título: "Nivel de agua" -->
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="@string/nivel_agua"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/verde_oscuro"
                    android:fontFamily="@font/comfortaa"/>

                <!-- Valor actual del nivel de agua -->
                <TextView
                    android:id="@+id/valor_agua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.5 L"
                    android:textColor="@color/verde_fuente2"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/comfortaa"/>
            </LinearLayout>

        </GridLayout>

        <!-- TextView con consejos sobre el cuidado de la planta -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/card_border"
            android:padding="16dp"
            android:text="@string/txt_consejos_planta"
            android:textStyle="bold"
            android:textColor="@color/verde_fuente"
            android:fontFamily="@font/comfortaa"
            android:textSize="16sp"
            android:gravity="center"/>

        <!-- TextView que indica el estado del sistema de riego automático -->
        <TextView
            android:id="@+id/riego_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/comfortaa"
            android:text="@string/btn_riego_automatico"
            android:textColor="@color/verde_fuente"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Botón para iniciar el riego manualmente -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_regar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:backgroundTint="@color/regar_button_background_selector"
            android:fontFamily="@font/comfortaa"
            android:paddingHorizontal="40dp"
            android:text="@string/regar"
            android:textStyle="bold"
            android:textColor="@color/regar_button_text_selector"
            android:textSize="18sp"
            app:cornerRadius="12dp"
            app:strokeColor="@color/verde_fuente2"
            app:strokeWidth="2dp"/>

        <!-- Botón para detener el riego -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_detener_riego"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:backgroundTint="@color/regar_button_background_selector"
            android:fontFamily="@font/comfortaa"
            android:paddingHorizontal="40dp"
            android:text="@string/btn_detener_riego"
            android:textStyle="bold"
            android:textColor="@color/regar_button_text_selector"
            android:textSize="18sp"
            app:cornerRadius="12dp"
            app:strokeColor="@color/verde_fuente2"
            app:strokeWidth="2dp"/>

        <!-- TextView que muestra la fecha o momento del último riego realizado -->
        <TextView
            android:id="@+id/ultimo_riego"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:text="@string/txt_ultimo_riego"
            android:textStyle="bold"
            android:textColor="@color/verde_fuente"
            android:fontFamily="@font/comfortaa"
            android:textSize="16sp" />

    </LinearLayout>

</ScrollView>
