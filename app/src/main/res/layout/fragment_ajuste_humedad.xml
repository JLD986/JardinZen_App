<?xml version="1.0" encoding="utf-8"?>
<!--
Este diseño corresponde al fragmento que permite ajustar el nivel mínimo
de humedad del suelo dentro de la app Jardín Zen.
Su función es permitir al usuario visualizar, modificar y guardar el porcentaje
de humedad que activará el riego automático si el suelo está seco.
Se usa un ScrollView para que el contenido sea visible en pantallas pequeñas.
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige_claro"
    tools:context="com.example.jardnzen_app.Fragmentos.FragmentAjusteHumedad">

    <!-- Contenedor principal que agrupa todos los elementos del fragmento -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Título principal que indica el propósito del fragmento -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nivel_minimo_humedad"
            android:textColor="@color/verde_fuente"
            android:textSize="40sp"
            android:fontFamily="@font/comfortaa"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Texto explicativo que indica al usuario qué representa este ajuste -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/define_porcentaje_humedad"
            android:background="@drawable/card_border"
            android:padding="16dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="@font/comfortaa"
            android:textColor="@color/verde_fuente"
            android:gravity="center"
            android:layout_marginBottom="32dp"/>

        <!-- Subtítulo que introduce la parte práctica del ajuste -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ajuste_nivel_humedad_adecuado"
            android:textColor="@color/verde_fuente"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/comfortaa"
            android:layout_marginBottom="10dp"/>

        <!-- Sección que contiene el texto, el slider para ajustar el porcentaje
             y el valor máximo de referencia (100%) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_border"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <!-- Texto que acompaña al slider para indicar el valor de humedad -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/porcentaje_suelo"
                android:textStyle="bold"
                android:textColor="@color/verde_fuente"
                android:fontFamily="@font/comfortaa"
                android:layout_marginEnd="8dp"/>

            <!-- Control deslizante que permite seleccionar el nivel de humedad mínimo.
                 Su valor puede ir del 0 al 100%, y el usuario puede moverlo en pasos de 1%. -->
            <com.google.android.material.slider.Slider
                android:id="@+id/slider_humedad"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:value="45"
                android:valueFrom="0"
                android:valueTo="100"
                android:stepSize="1"
                app:labelBehavior="gone"
                app:trackColorActive="@color/verde_fuente"
                app:trackColorInactive="@color/slider"
                app:thumbColor="@color/blanco"
                app:thumbStrokeColor="@color/verde_fuente"
                app:thumbStrokeWidth="2dp"/>

            <!-- Texto que muestra el valor máximo de referencia del slider -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/porcentaje_suelo_100"
                android:textStyle="bold"
                android:textColor="@color/verde_fuente"
                android:fontFamily="@font/comfortaa"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <!-- Texto dinámico que mostrará el estado actual del suelo (húmedo o seco) -->
        <TextView
            android:id="@+id/tv_estado_suelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/estado_actual_suelo"
            android:textColor="@color/verde_fuente2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/comfortaa"
            android:layout_marginBottom="25dp"/>

        <!-- Texto que explica cómo se activará el riego automático
             dependiendo del valor configurado en el slider -->
        <TextView
            android:id="@+id/tv_riego_automatico_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/riego_activado_si_baja"
            android:textColor="@color/verde_fuente2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/comfortaa"
            android:layout_marginBottom="32dp"/>

        <!-- Botón que guarda el valor seleccionado del nivel mínimo de humedad -->
        <Button
            android:id="@+id/btn_guardar_cambios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/guardar_cambios"
            android:backgroundTint="@color/verde_oscuro"
            android:textColor="@color/blanco"
            android:fontFamily="@font/comfortaa"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingHorizontal="40dp"
            android:paddingVertical="12dp"/>

    </LinearLayout>

</ScrollView>
