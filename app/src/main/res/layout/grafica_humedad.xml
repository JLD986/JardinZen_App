<?xml version="1.0" encoding="utf-8"?>
<!-- Contenedor principal que define la estructura del card de humedad -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/card_border"
    android:padding="16dp"
    android:layout_marginBottom="16dp">

    <!-- Título que indica el tipo de dato mostrado en la tarjeta (nivel de humedad) -->
    <TextView
        android:text="@string/humedad"
        android:textAlignment="center"
        android:textColor="@color/verde_oscuro"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/comfortaa"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Gráfico de línea donde se visualizarán los valores de humedad a lo largo del tiempo -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chartHumedad"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

</LinearLayout>
