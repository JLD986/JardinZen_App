<?xml version="1.0" encoding="utf-8"?>

<!--Archivo XML que define la interfaz gráfica para la pantalla de inicio de sesión
    de la aplicación Jardín Zen. Utiliza un LinearLayout vertical como contenedor principal-->
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/verde_fondo"
    tools:context="com.example.jardnzen_app.InicioSesionActivity">

    <!--Imagen del logo principal de la aplicación-->
    <ImageView
        android:src="@drawable/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <!--
        Título grande con el texto “Iniciar sesión”.
        Utiliza una fuente personalizada y color definido en los strings.
    -->
    <TextView
        android:text="@string/txt_iniciarSesion"
        android:fontFamily="@font/comfortaa"
        android:textStyle="bold"
        android:textColor="@color/verde_fuente"
        android:textSize="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--
        Campo de texto para ingresar el correo o nombre de usuario.
        Está dentro de un TextInputLayout para un diseño más moderno.
    -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="55dp">

        <EditText
            android:id="@+id/et_Correo"
            android:hint="@string/et_Correo"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!--
        Campo de texto para la contraseña.
        Incluye un botón para mostrar/ocultar el texto (passwordToggleEnabled).
    -->
    <com.google.android.material.textfield.TextInputLayout
        app:passwordToggleEnabled="true"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="55dp">

        <EditText
            android:id="@+id/et_contrasena"
            android:hint="@string/et_contrasena"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!--Botón principal para ingresar a la aplicación.
        Usa MaterialButton con bordes redondeados, color verde y texto en negrita-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_ingresar"
        android:text="@string/btn_ingresar"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        app:cornerRadius="20dp"
        android:textStyle="bold"
        android:textColor="@color/verde_oscuro"
        android:fontFamily="@font/comfortaa"
        android:backgroundTint="@color/verde_boton"
        app:strokeColor="@color/verde_fuente2"
        app:strokeWidth="2dp"
        android:layout_width="200dp"
        android:layout_height="60dp"/>

    <!--
        Texto con enlace para recuperar la contraseña.
        Aparece debajo del botón de ingresar.
    -->
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/txt_olvidasteContrasena"
        android:text="@string/txt_olvidasteContrasena"
        android:textColor="@color/azul_fuente"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="@font/comfortaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--
        Texto que indica la opción de ingresar con otra cuenta (por ejemplo, Google).
    -->
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/txt_ingresa_con"
        android:text="@string/txt_ingresa_con"
        android:textColor="@color/verde_fuente2"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="@font/comfortaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--
        Sección con el ícono de Google para iniciar sesión usando esa cuenta.
        Se usa un LinearLayout horizontal para centrar el icono.
    -->
    <LinearLayout
        android:id="@+id/boton_google"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- Ícono de Google usado como botón visual -->
        <ImageView
            android:id="@+id/google"
            android:src="@drawable/google"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </LinearLayout>

    <!--
        Texto que invita al usuario a registrarse si aún no tiene una cuenta.
    -->
    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/txt_no_tienes_cuenta"
        android:text="@string/txt_no_tienes_cuenta"
        android:textColor="@color/verde_fuente2"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="@font/comfortaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--
        Botón para ir a la pantalla de registro.
        Similar en estilo al botón de ingreso, pero más pequeño.
    -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_Registrar"
        android:text="@string/btn_registrar"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        app:cornerRadius="15dp"
        android:textStyle="bold"
        android:textColor="@color/verde_oscuro"
        android:fontFamily="@font/comfortaa"
        android:backgroundTint="@color/verde_boton"
        app:strokeColor="@color/verde_fuente2"
        app:strokeWidth="2dp"
        android:layout_width="150dp"
        android:layout_height="50dp"/>

</androidx.appcompat.widget.LinearLayoutCompat>
