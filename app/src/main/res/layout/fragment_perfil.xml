<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/beige_claro"
    tools:context="com.example.jardnzen_app.Fragmentos.FragmentPerfil">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/hola_usuario"
            android:text="@string/mi_perfil"
            android:fontFamily="@font/comfortaa"
            android:textStyle="bold"
            android:textColor="@color/verde_fuente"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:textSize="40sp"
            android:layout_width="250dp"
            android:layout_height="60dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_perfil"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp">

                <TextView
                    android:id="@+id/nombre_usuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usuario"
                    android:textColor="@color/verde_fuente"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/comfortaa"/>

                <TextView
                    android:id="@+id/correo_usuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="correo.ejemplo@gmail.com"
                    android:textColor="@color/verde_fuente"
                    android:textSize="16sp"
                    android:fontFamily="@font/comfortaa"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="InformaciÃ³n del sistema"
            android:fontFamily="@font/comfortaa"
            android:textStyle="bold"
            android:textColor="@color/verde_fuente"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:textSize="24sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/card_border"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_plant" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/comfortaa"
                android:text="@string/plantas_registradas"
                android:textStyle="bold"
                android:textColor="@color/verde_fuente"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/card_border"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_dispositivo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/comfortaa"
                android:text="@string/dispositivo_iot_vinculado"
                android:textStyle="bold"
                android:textColor="@color/verde_fuente"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/card_border"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_notificaciones" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/comfortaa"
                android:text="@string/notificaciones_activadas"
                android:textStyle="bold"
                android:textColor="@color/verde_fuente"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/card_border"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_gota_agua"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/comfortaa"
                android:text="@string/modo_riego"
                android:textStyle="bold"
                android:textColor="@color/verde_fuente"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opciones"
            android:fontFamily="@font/comfortaa"
            android:textStyle="bold"
            android:textColor="@color/verde_fuente"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:textSize="24sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center_horizontal">


            <Button
                android:id="@+id/btn_cambiar_contrasena"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:text="@string/cambiar_contrasena"
                android:backgroundTint="@color/verde_boton"
                app:strokeColor="@color/verde_fuente2"
                app:strokeWidth="2dp"
                android:textStyle="bold"
                android:textColor="@color/verde_fuente"
                android:fontFamily="@font/comfortaa"
                android:paddingHorizontal="10dp"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btn_cerrar_sesion"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="@string/cerrar_sesion"
                android:backgroundTint="@color/verde_boton"
                app:strokeColor="@color/verde_fuente2"
                app:strokeWidth="2dp"
                android:textStyle="bold"
                android:textColor="@color/verde_fuente"
                android:fontFamily="@font/comfortaa"
                android:paddingHorizontal="10dp"
                android:textAllCaps="false"
                android:textSize="15sp"/>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
