<?xml version="1.0" encoding="utf-8"?>
<!--
Diseño del FragmentPerfil:
Muestra la información del usuario, sus plantas registradas y opciones de configuración relacionadas con el sistema.
Incluye tarjetas informativas, botones interactivos y un botón para cerrar sesión.
-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige_claro"
    tools:context="com.example.jardnzen_app.Fragmentos.FragmentPerfil">

    <!-- ScrollView permite desplazarse si el contenido es mayor al alto de la pantalla -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Contenedor principal que organiza el contenido en columnas -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:paddingBottom="20dp">

            <!-- Muestra el encabezado del perfil del usuario -->
            <TextView
                android:id="@+id/hola_usuario"
                android:text="@string/mi_perfil"
                android:fontFamily="@font/comfortaa"
                android:textStyle="bold"
                android:textColor="@color/verde_fuente"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:textSize="40sp"
                android:layout_width="250dp"
                android:layout_height="60dp"/>

            <!-- Contiene la imagen del usuario, su nombre y correo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp">

                <!-- Imagen de perfil del usuario -->
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_perfil"/>

                <!-- Contenedor de nombre y correo -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp">

                    <!-- Nombre del usuario -->
                    <!-- Muestra el nombre registrado en la aplicación -->
                    <TextView
                        android:id="@+id/nombre_usuario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/verde_fuente"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/comfortaa"/>

                    <!-- Correo electrónico del usuario -->
                    <!-- Muestra el correo vinculado a la cuenta -->
                    <TextView
                        android:id="@+id/correo_usuario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="correo.ejemplo@gmail.com"
                        android:textColor="@color/verde_fuente"
                        android:textSize="16sp"
                        android:fontFamily="@font/comfortaa"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Título de la sección de datos del sistema -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Información del Sistema"
                android:fontFamily="@font/comfortaa"
                android:textStyle="bold"
                android:textColor="@color/verde_fuente"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:textSize="24sp"/>

            <!--TARJETA: PLANTAS REGISTRADAS-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/card_border2"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <!-- Icono representando una planta -->
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_plant" />

                <!-- Texto descriptivo de la tarjeta -->
                <!-- Etiqueta que indica la cantidad de plantas activas -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/comfortaa"
                    android:text="Plantas activas:"
                    android:textStyle="bold"
                    android:textColor="@color/verde_fuente"
                    android:textSize="18sp" />

                <!-- Dato dinámico: número de plantas registradas -->
                <TextView
                    android:id="@+id/txt_plantas_registradas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa"
                    android:text="0 plantas"
                    android:textStyle="bold"
                    android:textColor="@color/verde_fuente"
                    android:textSize="18sp" />
            </LinearLayout>

            <!--TARJETA: DISPOSITIVO VINCULADO-->
            <LinearLayout
                android:id="@+id/card_dispositivo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/card_border2"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <!-- Icono del dispositivo IoT -->
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_dispositivo"/>

                <!-- Título de la tarjeta -->
                <!-- Indica la conexión del dispositivo inteligente al sistema -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/comfortaa"
                    android:text="Dispositivo vinculado:"
                    android:textStyle="bold"
                    android:textColor="@color/verde_fuente"
                    android:textSize="18sp" />

                <!-- Estado del dispositivo IoT -->
                <!-- Muestra si el sistema detecta un dispositivo conectado -->
                <TextView
                    android:id="@+id/txt_dispositivo_iot_vinculado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa"
                    android:text="Verificando..."
                    android:textStyle="bold"
                    android:textColor="@color/verde_fuente"
                    android:textSize="18sp" />
            </LinearLayout>

            <!--TARJETA: NOTIFICACIONES-->
            <LinearLayout
                android:id="@+id/card_notificaciones"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/card_border2"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <!-- Icono de campana de notificaciones -->
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_notificaciones" />

                <!-- Etiqueta descriptiva -->
                <!-- Indica el estado actual de las notificaciones -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/comfortaa"
                    android:text="Notificaciones:"
                    android:textStyle="bold"
                    android:textColor="@color/verde_fuente"
                    android:textSize="18sp" />

                <!-- Estado de las notificaciones -->
                <!-- Muestra si están activadas o desactivadas -->
                <TextView
                    android:id="@+id/txt_notificaciones_estado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa"
                    android:text="Activadas"
                    android:textStyle="bold"
                    android:textColor="@color/verde_fuente"
                    android:textSize="18sp" />
            </LinearLayout>

            <!--TARJETA: MODO DE RIEGO-->
            <LinearLayout
                android:id="@+id/card_modo_riego"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/card_border2"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <!-- Icono de gota representando el riego -->
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_gota_agua"/>

                <!-- Texto descriptivo -->
                <!-- Indica si el sistema está en modo automático o manual -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/comfortaa"
                    android:text="Modo de riego:"
                    android:textStyle="bold"
                    android:textColor="@color/verde_fuente"
                    android:textSize="18sp" />

                <!-- Valor dinámico del modo de riego actual -->
                <TextView
                    android:id="@+id/txt_modo_riego"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa"
                    android:text="Automático"
                    android:textStyle="bold"
                    android:textColor="@color/verde_fuente"
                    android:textSize="18sp" />
            </LinearLayout>


            <!-- Permite salir de la cuenta del usuario -->
            <Button
                android:id="@+id/btn_cerrar_sesion"
                android:layout_marginTop="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="@string/cerrar_sesion"
                android:backgroundTint="@color/verde_target"
                app:strokeColor="@color/verde_fuente2"
                app:strokeWidth="2dp"
                android:textStyle="bold"
                android:textColor="@color/verde_fuente"
                android:fontFamily="@font/comfortaa"
                android:paddingHorizontal="10dp"
                android:textSize="16sp"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
