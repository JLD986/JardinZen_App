<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/beige_claro"
    tools:context="com.example.jardnzen_app.Fragmentos.FragmentPerfil">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/hola_usuario"
                android:text="@string/mi_perfil"
                android:fontFamily="@font/comfortaa"
                android:textStyle="bold"
                android:textColor="@color/verde_fuente"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:textSize="40sp"
                android:layout_width="250dp"
                android:layout_height="60dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_perfil"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp">

                    <TextView
                        android:id="@+id/nombre_usuario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/verde_fuente"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/comfortaa"/>

                    <TextView
                        android:id="@+id/correo_usuario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="correo.ejemplo@gmail.com"
                        android:textColor="@color/verde_fuente"
                        android:textSize="16sp"
                        android:fontFamily="@font/comfortaa"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informacion del Sistema"
                android:fontFamily="@font/comfortaa"
                android:textStyle="bold"
                android:textColor="@color/verde_fuente"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:textSize="24sp"/>

            <!-- Plantas Activas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/card_border2"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_plant" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/comfortaa"
                    android:text="Plantas activas:"
                    android:textStyle="bold"
                    android:textColor="@color/verde_fuente"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_plantas_registradas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa"
                    android:text="0 plantas"
                    android:textStyle="bold"
                    android:textColor="@color/verde_fuente"
                    android:textSize="18sp" />

            </LinearLayout>

            <!-- Dispositivo Vinculado -->
            <LinearLayout
                android:id="@+id/card_dispositivo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/card_border2"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_dispositivo"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/comfortaa"
                    android:text="Dispositivo vinculado:"
                    android:textStyle="bold"
                    android:textColor="@color/verde_fuente"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_dispositivo_iot_vinculado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa"
                    android:text="Verificando..."
                    android:textStyle="bold"
                    android:textColor="@color/verde_fuente"
                    android:textSize="18sp" />

            </LinearLayout>

            <!-- Notificaciones -->
            <LinearLayout
                android:id="@+id/card_notificaciones"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/card_border2"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_notificaciones" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/comfortaa"
                    android:text="Notificaciones:"
                    android:textStyle="bold"
                    android:textColor="@color/verde_fuente"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_notificaciones_estado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa"
                    android:text="Activadas "
                    android:textStyle="bold"
                    android:textColor="@color/verde_fuente"
                    android:textSize="18sp" />

            </LinearLayout>

            <!-- Modo Riego -->
            <LinearLayout
                android:id="@+id/card_modo_riego"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/card_border2"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_gota_agua"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/comfortaa"
                    android:text="Modo de riego:"
                    android:textStyle="bold"
                    android:textColor="@color/verde_fuente"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_modo_riego"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa"
                    android:text="Automático"
                    android:textStyle="bold"
                    android:textColor="@color/verde_fuente"
                    android:textSize="18sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_cerrar_sesion"
                android:layout_marginTop="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="@string/cerrar_sesion"
                android:backgroundTint="@color/verde_target"
                app:strokeColor="@color/verde_fuente2"
                app:strokeWidth="2dp"
                android:textStyle="bold"
                android:textColor="@color/verde_fuente"
                android:fontFamily="@font/comfortaa"
                android:paddingHorizontal="10dp"
                android:textSize="16sp"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>