<?xml version="1.0" encoding="utf-8"?>

<!--
    Pantalla de Registro de Usuario.
    Usa un LinearLayout vertical que centra todos los elementos
    y define el fondo verde del diseño.
-->
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/verde_fondo"
    tools:context="com.example.jardnzen_app.RegistroActivity">

    <!--
        Imagen del logo de la aplicación.
        Sirve como elemento decorativo y de identidad visual.
    -->
    <ImageView
        android:src="@drawable/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <!--
        Título principal "Registrar".
        Usa una fuente personalizada y un tamaño grande para destacar.
    -->
    <TextView
        android:text="@string/txt_registrar"
        android:fontFamily="@font/comfortaa"
        android:textStyle="bold"
        android:textColor="@color/verde_fuente"
        android:textSize="60sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--
        Etiqueta que indica el campo de "Nombre de usuario".
    -->
    <TextView
        android:text="@string/et_Nombreusuario"
        android:layout_marginTop="30dp"
        android:layout_marginRight="52dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/comfortaa"
        android:textColor="@color/cafe_oscuro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--
        Campo de texto para escribir el nombre de usuario.
        Se encuentra dentro de un TextInputLayout (de Material Design)
        para mejorar el estilo del campo.
    -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="310dp"
        android:layout_height="55dp">

        <EditText
            android:id="@+id/et_Nombreusuario"
            android:hint="@string/et_Nombreusuario"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!--
        Etiqueta del campo de "Correo electrónico".
    -->
    <TextView
        android:text="@string/tv_correoElectronico"
        android:layout_marginTop="10dp"
        android:layout_marginRight="55dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/comfortaa"
        android:textColor="@color/cafe_oscuro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--
        Campo de texto para ingresar el correo electrónico.
    -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="310dp"
        android:layout_height="55dp">

        <EditText
            android:id="@+id/et_Correo"
            android:hint="@string/et_Correo"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!--
        Etiqueta del campo de "Contraseña".
    -->
    <TextView
        android:text="@string/et_contrasena"
        android:layout_marginTop="10dp"
        android:layout_marginRight="91dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/comfortaa"
        android:textColor="@color/cafe_oscuro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--
        Campo de texto para ingresar la contraseña.
        Incluye la opción de mostrar/ocultar la contraseña (passwordToggleEnabled).
    -->
    <com.google.android.material.textfield.TextInputLayout
        app:passwordToggleEnabled="true"
        android:layout_width="310dp"
        android:layout_height="55dp">

        <EditText
            android:id="@+id/et_contrasena"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/et_contrasena"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <!--
        Botón para registrar al usuario.
        Tiene bordes redondeados, color personalizado y borde decorativo.
    -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_registrar"
        android:text="@string/btn_registrar"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        app:cornerRadius="15dp"
        android:textStyle="bold"
        android:textColor="@color/verde_oscuro"
        android:fontFamily="@font/comfortaa"
        android:backgroundTint="@color/verde_boton"
        app:strokeColor="@color/verde_fuente2"
        app:strokeWidth="2dp"
        android:layout_width="200dp"
        android:layout_height="55dp"/>

    <!--
        Texto que muestra "o", separando el botón de registro
        y el enlace de iniciar sesión.
    -->
    <TextView
        android:id="@+id/txt_o"
        android:text="@string/txt_o"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/comfortaa"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/cafe_oscuro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--
        Enlace tipo texto para redirigir al usuario
        hacia la pantalla de inicio de sesión.
    -->
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/btn_iniciosesion"
        android:text="@string/btn_iniciarSesion"
        android:fontFamily="@font/comfortaa"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/azul_fuente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.appcompat.widget.LinearLayoutCompat>
